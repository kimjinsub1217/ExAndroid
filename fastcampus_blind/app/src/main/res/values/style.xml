<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.App" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextAppearance.AppCompat.Large" parent="TextAppearance.App">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextAppearance.AppCompat.Large.Bold" parent="TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.Small" parent="TextAppearance.App">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.Bold" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
    </style>
</resources>